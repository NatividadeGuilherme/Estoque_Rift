@model Estoque_Rift.Models.InventarioViewModel
@{
    ViewBag.Title = "Incluir";
}

<h2>Adicionar Item ao inventário</h2>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-4">
            <label class="control-label">Produto</label>
            @Html.DropDownListFor(m => m.IdProduto, new SelectList(ViewBag.Produtos,"Id","Nome"), new { htmlAttributes = new { @class="form-control" } })
        </div>
        <div class="col-md-4">
            <label class="control-label">Quantidade Disponível</label>
            @Html.EditorFor(m => m.QuantidadeDisponivel, new { htmlAttributes= new { @class="form-control", required=true } })
        </div>
        <div class="col-md-4">
            <label class="control-label">Estoque Minímo</label>
            @Html.EditorFor(m => m.QuantidadeMinima, new { htmlAttributes= new { @class="form-control", required=true } })
        </div>
    </div>
    <div class="row">
        <button type="submit">Cadastrar</button>
    </div>
}